<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Каталог футболистов</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm  navbar-light bg-white border-bottom  mb-3">
            <div class="container">
                <ul class="nav flex-grow-1 justify-content-around ">
                    <li class="nav-item ">
                        <a class="nav-link"  asp-controller="Home" asp-action="NewPlayer">Добавление футболиста</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="PlayerList">Список футболистов</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container p-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>    
    <script src="~/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
